
@{
	ViewData["Title"] = Localizer["MainCaption"];
}

@model WebApplicationNewsBlog.Models.ViewModels.LoginModel

<h2>@Localizer["MainCaption"]</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
	<div class="validation" asp-validation-summary="ModelOnly"></div>
	<div>
		<div class="form-group">
            <label asp-for="Email">@Localizer["EnterEmail"]</label>
			<input type="text" asp-for="Email" />
			<span asp-validation-for="Email" />
		</div>
		<div class="form-group">
            <label asp-for="Password">@Localizer["EnterPassword"]</label>
			<input asp-for="Password" accept="image/*"/>
			<span asp-validation-for="Password" />
		</div>
		<div class="form-group">
			<input type="submit" value="@Localizer["ButtonComeCaption"]" class="btn btn-outline-dark" />
		</div>
	</div>
</form>
